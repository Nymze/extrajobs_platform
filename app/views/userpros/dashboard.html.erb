<%= render partial: "layouts/user_pro_layouts/header"  %>
<br/>
<% if userpro_signed_in? %>

	<ul>
		<li><%= link_to 'poster une offre', job_offers_path, :class => 'navbar-link' %> |</li>

		<li>Vos missions en cours: <%=current_userpro.job_offers.count %></li>


	</ul>



<% current_userpro.job_offers.each do |job_offer| %> 

	<b><%= job_offer.title %></b>
	<br>
	<br>
	
	<%= job_offer.description %>
	<br>
	<br>

	<% if !job_offer.users.empty? %>
		<div>	
			Les extras suivants on postulé :
				<ul>
					<li>
						<% job_offer.users.each do |user| %>
							<%=  user.email %>
						<% end %>
					</li>
				</ul>	
		</div>
	<% else %>
		Aucun extra n'a postulé pour le moment.
	<% end %>
		<br>
		<br>	

<% end %>
<% end %>